# ---------------------------
# Server
# ---------------------------
PORT=3000
NODE_ENV=development

# UIの公開パス（基本は /app 固定。変更したい場合のみ）
PUBLIC_APP_BASE=/app

# CORS（必要時のみ有効化）
ENABLE_CORS=false
CORS_ORIGIN=https://example.com

# レートリミット（1分あたり）
RATE_LIMIT_ESTIMATE=60
RATE_LIMIT_LEAD=20

# ---------------------------
# App Config
# ---------------------------
# 使用する都道府県データ（datasets 以下のディレクトリ名）
PREFECTURE=hiroshima

# 計算ストラテジ：v1（MVP） / v2（将来拡張）
CALC_STRATEGY=v1

# 初期表示で価格カードを出すか（true/false）
UI_SHOW_PRICE_ON_INIT=false

# ---------------------------
# Mail (adapters/mailer)
# ---------------------------
# メール送信を有効化（false の場合は送信しない）
MAIL_ENABLED=false

# SMTP設定（Nodemailer）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_smtp_user
MAIL_PASS=your_smtp_password

# 送信元/送信先
MAIL_FROM='"Estimator" <no-reply@example.com>'
MAIL_TO='owner@example.com'

# ---------------------------
# Storage (adapters/storage)
# ---------------------------
# 保存実装の選択：memory（MVP） / firebase（将来）
STORAGE_DRIVER=memory

# Firebase を使う場合のみ設定（STORAGE_DRIVER=firebase）
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# 改行は \n を含めて１行で記載（GitHub Actions等を想定）
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# 保存先コレクション/パス
FIREBASE_COLLECTION_LEADS=leads

# ---------------------------
# Logging
# ---------------------------
LOG_LEVEL=info
# production では combined ログ、development では dev ログを server.js 側で選択

# ---------------------------
# Security (helmet などの調整)
# ---------------------------
# true にすると Helmet のCSPを有効化（フロントの inline と衝突する場合は false を推奨）
ENABLE_HELMET_CSP=false
